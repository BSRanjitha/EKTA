<title>Dance</title>
</head> 
<body>
    <div class="banner image-overlay" >
        <img src="../assets/img/letsee.jpg" alt="lemurs" class="bg-image" />
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                
               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="firstlogo"><a href="/"><img class="ektalogo" src="../assets/img/logo2 (3).jpg"></a></div>
            <nav class="navbar">
            <div id="nav-close" class="fas fa-times"></div>
                </div>
            </div>
        </nav>
        <h2 style="color: white;"> India's Dance Mosiac</h2>
     </div>
    
    
    <div class="learn">
     <!-- DROPDOWN  -->
         <div class="dropdown">
            <div class="select">
              <select id="select-state">
                <option value="Karnataka">Karnataka</option>
                <option value="Gujarat">Gujarat</option>
                <option value="Jammu and Kashmir">J & K</option>
                <option value="Telangana">Telangana</option>
                <option value="Assam">Assam</option>
              </select>
            </div>
            
         </div>
        <section class="cards">
       
        <article class="card card--1">
          <div class="card__img"></div>
          <a  class="card_link" id="explore-btn">
             <div class="card__img--hover"></div>
           </a>
          <div class="card__info">
            <span class="card__category"> Explore</span>
            <h5 class="card__title">Delve deep into the enchanting world of India's diverse dance traditions, 
              where each step reveals a tapestry of culture and heritage.</h5>
          </div>
        </article>

        <article class="card card--2">
          <div class="card__img"></div>
          <a  class="card_link" id="learn-btn">
             <div class="card__img--hover"></div>
           </a>
          <div class="card__info">
            <span class="card__category"> Learn</span>
            <h5 class="card__title">Embark on a captivating journey to unlock the intricate secrets and cultural 
              significance of India's diverse and mesmerizing dance forms.</h5>
          </div>
        </article>  
      </section>
    </div>
    <script>

        // Get a reference to the select element
        const selectState = document.getElementById("select-state");

        // Function to update the selected option based on the state in the URL
        function updateSelectedOption() {
            // Get the state from the URL
            const url = new URL(window.location.href);
            const state = url.searchParams.get("state");

            // Update the selected option in the dropdown
            selectState.value = state;
        }

        // Add an event liste ner to detect changes in the URL
        window.addEventListener("popstate", updateSelectedOption);

        // Initial update based on the current URL
        updateSelectedOption();
    

document.getElementById("explore-btn").addEventListener("click", function () {
    const selectedState = document.getElementById("select-state").value;
    window.location.href = `danceexp?state=${selectState.value}`;
});

document.getElementById("learn-btn").addEventListener("click", function () {
    const selectedState = document.getElementById("select-state").value;
    window.location.href = `dancelearn?state=${selectState.value}`;
});
</script>

